<h1></h1>

<div id="checking">Checking...</div>
<div>

    Name: <input type="text" name="UserName" id="UserName" /> <input type="button" id="b1" value="Check" />
    <div id="result"></div>
    @Scripts.Render("~/bundles/jquery")
    <script>

        $(document).ready(function () {

            $('#checking').hide();

            $('#b1').click(function () {

                var userName = $('#UserName').val();

                //alert('User Name ='+ userName);
                $('#checking').show();
                $.getJSON("/AdminLogin/AdminVerify?UserName=" + userName, function (data) {
                    $('#checking').hide();
                    if (data) {
                        $('#result').text("User  exists in database");

                    }
                    else {
                        $('#result').text("User not exist");
                    }
                });

            });

        });
    </script>
